<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="init-users-table" author="hardelele" runOnChange="true">
        <createTable tableName="users">
            <column name="id" type="uuid" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(128)"/>
            <column name="refresh_token" type="varchar(128)"/>
            <column name="name" type="varchar(50)" />
            <column name="surname" type="varchar(50)"/>
            <column name="country" type="varchar(50)"/>
            <column name="city" type="varchar(50)"/>
            <column name="status" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="init-events-table" author="alsntt" runOnChange="true">
        <createTable tableName="events">
            <column name="id" type="uuid" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="owner_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="time" type="timestamp">
<!--                <constraints nullable="false"/>-->
            </column>
            <column name="duration" type="bigint"/>
            <column name="title" type="varchar(50)" >
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)" >
                <constraints nullable="false"/>
            </column>
            <column name="template_id" type="uuid" />
            <column name="longitude" type="double precision" />
            <column name="latitude" type="double precision" />
        </createTable>
    </changeSet>

    <changeSet id="init-templated-table" author="alsntt" runOnChange="true">
        <createTable tableName="templates">
            <column name="id" type="uuid" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="owner_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="bigint"/>
            <column name="repeat_time" type="bigint" />
            <column name="repeat_amount" type="integer" />
            <column name="title" type="varchar(50)" >
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)" >
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="double precision" />
            <column name="latitude" type="double precision" />
        </createTable>
    </changeSet>

    <changeSet id="init-relationship-table" author="alsntt" runOnChange="true">
        <createTable tableName="relationships">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="owner_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="friend_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="privacy_id" type="bigint" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-categories-table" author="alsntt" runOnChange="true">
        <createTable tableName="categories">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="description" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-event_tags-table" author="alsntt" runOnChange="true">
        <createTable tableName="event_tags">
            <column name="tag_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="event_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-template_tags-table" author="alsntt" runOnChange="true">
        <createTable tableName="template_tags">
            <column name="tag_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="template_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-tags-table" author="alsntt" runOnChange="true">
        <createTable tableName="tags">
            <column name="id" type="uuid" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="description" type="varchar(100)" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-comments-table" author="alsntt" runOnChange="true">
        <createTable tableName="comments">
            <column name="id" type="uuid" >
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="event_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="owner_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-blacklists-table" author="alsntt" runOnChange="true">
        <createTable tableName="black_lists">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="event_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="friend_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-event_privacy-table" author="alsntt" runOnChange="true">
        <createTable tableName="event_privacy">
            <column name="event_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="privacy_id" type="bigint" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="init-template_privacy-table" author="alsntt" runOnChange="true">
        <createTable tableName="template_privacy">
            <column name="template_id" type="uuid" >
                <constraints nullable="false"/>
            </column>
            <column name="privacy_id" type="bigint" >
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>